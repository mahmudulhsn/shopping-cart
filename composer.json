{
  "name": "mahmudulhsn/shopping-cart",
  "description": "A simple shopping cart package for Laravel applications.",
  "keywords": [
    "laravel",
    "shopping cart",
    "e-commerce",
    "cart"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/mahmudulhsn/shopping-cart",
  "authors": [
    {
      "name": "M H Hasib",
      "email": "hasib.mahmudul@gmail.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/mahmudulhsn/shopping-cart/issues",
    "source": "https://github.com/mahmudulhsn/shopping-cart"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/mahmudulhsn"
    }
  ],
  "autoload": {
    "psr-4": {
      "Mahmudulhsn\\ShoppingCart\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mahmudulhsn\\ShoppingCart\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2 || ^8.3",
    "illuminate/support": "^10.0 || ^11.0"
  },
  "require-dev": {
    "pestphp/pest": "^3.0",
    "mockery/mockery": "^1.6",
    "squizlabs/php_codesniffer": "^3.8",
    "friendsofphp/php-cs-fixer": "^3.20"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "Mahmudulhsn\\ShoppingCart\\ShoppingCartServiceProvider"
      ],
      "aliases": {
        "Cart": "Mahmudulhsn\\ShoppingCart\\Facades\\CartFacade"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "lint": "phpcs",
    "lint-fix": "phpcbf",
    "format": "php-cs-fixer fix"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform-check": false,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
